
<h2><%= "Add An Album to #{@band.name}'s Album Collection" %></h2>

<form action = "/albums" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="text" name="album[title]" placeholder="Enter Album Title">
    <label id="radio-question">Created Live or in Studio?
        <input type="radio" id="live" name="album[live]" value="true">
        <label for="live">Live</label>
        <input type="radio" id="studio" name="album[live]" value="false">
        <label for="studio">Studio</label>
    </label>
    <input type="text" name="album[year]" placeholder="Year Created e.g. 1994">
    <input type="hidden" name="album[band_id]" value="<%= @band.id %>">
    <input type="submit" value="submit album">
</form>