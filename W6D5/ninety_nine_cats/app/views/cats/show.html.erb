<h1><%= @cat.name %></h1>
<table>
    
    <thead>
        <tr>
            <th colspan="3"><%= "#{@cat.name}'s Info" %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">Attributes</th>
            <td>Birth Date</td>
            <td>Color</td>
            <td>Sex</td>
        </tr>
        <tr>
            <th scope="row">Value</th>
            <td><%= @cat.birth_date %></td>
            <td><%= @cat.color %></td>
            <td><%= @cat.sex %></td>
        </tr>
    </tbody>
</table>

<a href="<%= edit_cat_url(@cat) %>">Edit Cat Info!</a>
<a href="<%= cats_url %>">Back to All Cats!</a>